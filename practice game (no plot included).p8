function make_actor(x, y, sp, d)
  a  = 10
  a={}
  a.x = x
  a.y = y
  a.frame = 0
  a.spr = sp
  a.direction = d
  add(actors,a)
  return a 
end

function draw_actor(a)
  local sx = (a.x * 8) - 4 
  local sy = (a.y * 8) - 4  
  spr(a.spr + a.frame, sx, sy)
end

function _draw ()
  print (a) a == 10
  cls() a == 10
  map(0,0,0,0,16,16) a === 10
  draw_actor(5)  a === 10
end

